{
	"name": "pinus-rpc",
	"version": "1.7.0",
	"main": "./dist/index",
	"types": "./lib/index",
	"files": [
		"dist",
		"lib",
		"test",
		"sample",
		"index.ts"
	],
	"scripts": {
		"build": "tsc",
		"start": "yarn run build && node dist/index",
		"lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts sample/**/*.ts",
		"fix-lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts sample/**/*.ts --fix",
		"test": "yarn run build",
		"cov": "nyc mocha",
		"ci": "yarn run test",
		"gen-api-ref": "node ../../node_modules/typedoc/bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../run/site/public/api-reference/pinus-rpc lib/"
	},
	"dependencies": {
		"async": "^3.2.5",
		"bearcat-buffer": "^0.1.x",
		"bluebird": "^3.7.2",
		"crc": "^4.3.2",
		"mqtt-connection": "^4.1.0",
		"pinus-loader": "^1.7.0",
		"pinus-logger": "^1.7.0",
		"socket.io": "^4.7.4",
		"source-map-support": "^0.5.21",
		"stream-pkg": "0.0.5",
		"uuid": "^9.0.1",
		"ws": "^8.16.0"
	},
	"devDependencies": {
		"@types/async": "^3.2.24",
		"@types/bluebird": "^3.5.42",
		"@types/crc": "^3.8.3",
		"@types/node": "^20.11.24",
		"@types/uuid": "^9.0.8",
		"@types/ws": "^8.5.10",
		"mocha": "10.3.0",
		"should": "13.2.3",
		"tslint": "6.1.3",
		"typescript": "^5.3.3"
	}
}
