{
	"name": "pinus-rpc",
	"version": "1.5.0",
	"main": "./dist/index",
	"types": "./lib/index",
	"files": [
		"dist",
		"lib",
		"test",
		"sample",
		"index.ts"
	],
	"scripts": {
		"build": "tsc",
		"start": "yarn run build && node dist/index",
		"lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts sample/**/*.ts",
		"fix-lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts sample/**/*.ts --fix",
		"test": "yarn run build",
		"cov": "nyc mocha",
		"ci": "yarn run test",
		"gen-api-ref": "node ../../node_modules/typedoc/bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../run/site/public/api-reference/pinus-rpc lib/"
	},
	"dependencies": {
		"async": "^3.0.0",
		"bearcat-buffer": "^0.1.x",
		"bluebird": "^3.5.1",
		"crc": "^3.8.0",
		"mqtt-connection": "^4.1.0",
		"pinus-loader": "^1.5.0",
		"pinus-logger": "^1.5.0",
		"socket.io": "^4.1.3",
		"source-map-support": "^0.5.0",
		"stream-pkg": "0.0.5",
		"uuid": "^8.3.2",
		"ws": "^7.0.0"
	},
	"devDependencies": {
		"@types/async": "^3.0.0",
		"@types/bluebird": "^3.5.19",
		"@types/crc": "^3.4.0",
		"@types/node": "^16.3.3",
		"@types/uuid": "^8.3.1",
		"@types/ws": "^7.4.6",
		"mocha": "9.0.2",
		"should": "13.2.3",
		"tslint": "6.1.3",
		"typescript": "^4.3.5"
	}
}
