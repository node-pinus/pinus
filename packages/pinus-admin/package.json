{
    "name": "pinus-admin",
    "version": "1.5.0",
    "main": "./dist/index",
    "types": "./lib/index",
    "files": [
        "dist",
        "lib",
        "sample",
        "test",
        "index.ts"
    ],
    "scripts": {
        "build": "tsc",
        "start": "yarn run build && node dist/index",
        "lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts",
        "fix-lint": "node_modules/.bin/tslint --format prose -c ../../tslint.json lib/**/*.ts test/**/*.ts --fix",
        "test": "yarn run build",
        "cov": "nyc mocha",
        "ci": "yarn run test",
        "gen-api-ref": "node ../../node_modules/typedoc/bin/typedoc --mode file --hideGenerator --excludeExternals --ignoreCompilerErrors --out ../../run/site/public/api-reference/pinus-admin lib/"
    },
    "engines": {
        "node": ">=12.9.0"
    },
    "dependencies": {
        "mqtt-connection": "^4.1.0",
        "pinus-logger": "^1.5.0",
        "pinus-monitor": "^1.5.0",
        "pinus-scheduler": "^1.5.0",
        "read-last-lines": "^1.3.0"
    },
    "devDependencies": {
        "@types/node": "^16.3.3",
        "mocha": "9.0.2",
        "should": "13.2.3",
        "tslint": "6.1.3",
        "typescript": "^4.3.5"
    }
}
